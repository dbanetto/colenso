extends layout

block navbar
  +nav_item("/") Home
  +nav_item("/browse") Browse
  +nav_item("/search") Search

block content
    .container
        h2 Add new Document
        hr
        form(action="admin/new", method="post", enctype="multipart/form-data")
          p
              label(for="file") Document to upload
              input(type="file", name="newDoc")
          p
              label(for="path") Upload Path
              input(type="text", name="path")
          p
              input(type="submit", name="submit") 
