extends layout

block body
    .header
        +navbar(title, "dropdown_menu", "inverse")
          +nav_item("/") Home
          +nav_item("/browse","active") Browse
          +nav_item("/search") Search

    .container
        ol.breadcrumb
            each crumb in crumbs
                if crumb.url
                    li
                        a(href="#{crumb.url}") #{crumb.title}
                else
                    li= crumb
        .tei
            .panel.panel-default
                .panel-heading
                    h1
                        !{doc.title}
                        .pull-right
                            a#download.btn.btn-success(href='#{download_url}') Download
                .panel-body
                    h3 Authors
                    p 
                        ul
                            !{doc.author}
                    h3 Source Description
                    p !{doc.sourceDesc}
            .panel.panel-default
                .panel-body
                    h3 Front
                    p.front= doc.front
                    h3 Body
                    p.text !{doc.body}
