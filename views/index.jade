extends layout

block body
    .header
        +navbar(title, "dropdown_menu", "inverse")
          +nav_item("/","active") Home
          +nav_item("/") About
          +nav_item("/") Contact

    .container
      .pull-right
          form.form-inline
              +input("text","search","search")
              +input-group()
                +icon-btn("search")

      .row
        .col-md-6
          h1= title
          p Welcome to #{title}

      +list-group-custom()
        each doc in docs
            +list-group-item("#")
                h4.list-group-item-heading= doc.title
                p.list-group-item-text= doc.author
