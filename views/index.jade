extends layout

block body
    .header
        +navbar(title, "dropdown_menu", "inverse")
          +nav_item("/","active") Home
          +nav_item("/browse") Browse
          +nav_item("/search") Search

    .container
        .row
          a.navbar-brand= title
          .col-md-3.pull-right
              form.form-inline(role="search", method="get", action="/search/query")
                  .input-group
                      input.form-control(name="q", type="search", placeholder="Search")
    .container
      +list-group-custom()
          each doc in docs || []
            +list-group-item("#")
                h4.list-group-item-heading= doc.title
                p.list-group-item-text= doc.author
