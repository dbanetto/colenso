extends layout

block navbar
  +nav_item("/") Home
  +nav_item("/browse") Browse
  +nav_item("/search") Search

block content
    .container
        if error
            .alert.alert-danger.alert-dismissible(role="alert")
                button.close(data-dismiss="alert", aria-label="Close")
                    span(aria-hidden="true") &times;
                strong Error
                |  #{error}
        h1 Upload Document
        hr

        form.form-horizontal(action="upload", method="post", enctype="multipart/form-data")
            .from-group
                label.control-label(for="file", required="true") Document to upload
                input(type="file", name="newDoc", required="true")
                br

                label.control-label(for="path") Author
                input.form-control(type="text", name="author", required="true")
                br

                label.control-label(for="type", required="true") Type of Document
                select.form-control(name="type")
                    option(value="private_letter") Private Letter
                    option(value="newspaper_letter") Newspaper Letter
                    option(value="diary") Diary
                br
            .from-group
                a.btn.btn-default(href="/admin") Back
                button.btn.btn-success.pull-right(type="submit", name="submit") Upload Document
